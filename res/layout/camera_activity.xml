<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/beyondarFragment"
        android:name="com.beyondar.android.fragment.BeyondarFragmentSupport"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <RelativeLayout
        android:layout_height="60dp"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <ImageView
                android:layout_height="match_parent"
                android:layout_width="100dp"
                android:src="@drawable/camera_view"
                android:onClick="startCamView"/>

            <ImageView
                android:layout_height="match_parent"
                android:layout_width="100dp"
                android:src="@drawable/map_view"
                android:onClick="startMapView"/>

            <ImageView
                android:layout_height="match_parent"
                android:layout_width="100dp"
                android:src="@drawable/post_view"
                android:clickable="true"
                android:onClick="startPostView"/>
        </LinearLayout>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/arc_logo"/>

    </RelativeLayout>

</RelativeLayout>


